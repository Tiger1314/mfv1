<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mf.dao.MfAreaDao">

	<select id="queryObject" resultType="mf.entity.MfAreaEntity">
		select * from mf_area where `code` = #{value}
	</select>

	<select id="queryList" resultType="mf.entity.MfAreaEntity">
		select * from mf_area
		where 1 = 1
		<!--<if test="degree != null">-->
			<!--and `degree` = #{degree}-->
		<!--</if>-->
		<if test="parentCode != null">
			and `parent_code` = #{parentCode}
		</if>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>


	<select id="queryListByParentCode" statementType="CALLABLE" resultType="java.util.Map">
		{
		call pro_get(#{value})
		}
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from mf_area
		where 1 = 1
		<if test="degree != null">
			and `degree` = #{degree}
		</if>
		<if test="parentCode != null">
			and `parent_code` = #{parentCode}
		</if>
	</select>
	 
	<insert id="save" parameterType="mf.entity.MfAreaEntity" useGeneratedKeys="true" keyProperty="id">
		insert into mf_area
		(
			`code`, 
			`name`, 
			`pinyin`, 
			`degree`, 
			`parent_code`, 
			`is_municipality`, 
			`is_provinceMunic`, 
			`create_time`, 
			`update_time`
		)
		values
		(
			#{code}, 
			#{name}, 
			#{pinyin}, 
			#{degree}, 
			#{parentCode}, 
			#{isMunicipality}, 
			#{isProvincemunic}, 
			#{createTime}, 
			#{updateTime}
		)
	</insert>
	 
	<update id="update" parameterType="mf.entity.MfAreaEntity">
		update mf_area 
		<set>
			<if test="code != null">`code` = #{code}, </if>
			<if test="name != null">`name` = #{name}, </if>
			<if test="pinyin != null">`pinyin` = #{pinyin}, </if>
			<if test="degree != null">`degree` = #{degree}, </if>
			<if test="parentCode != null">`parent_code` = #{parentCode}, </if>
			<if test="isMunicipality != null">`is_municipality` = #{isMunicipality}, </if>
			<if test="isProvincemunic != null">`is_provinceMunic` = #{isProvincemunic}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from mf_area where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from mf_area where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>